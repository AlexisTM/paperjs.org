!!! 5
html
  head
    meta(http-equiv="content-type", content="text/html; charset=utf-8")
    if root.description
      meta(name="description", content=root.description)
    link(rel="stylesheet", href=site.getUrl('assets/css/reference.css'))
    link(rel="stylesheet", href=site.getUrl('assets/css/style.css'))
    link(rel="stylesheet", href=site.getUrl('assets/css/paperscript.css'))
    link(rel="stylesheet", href=site.getUrl('assets/css/codemirror.css'))
    link(rel="icon", href=site.getUrl('assets/favicon.ico'), type="image/x-icon")
    link(rel="shortcut icon", href=site.getUrl('assets/favicon.ico'))
    script(src=site.getUrl('assets/js/bootstrap.js'))
    script(src=site.getUrl('assets/js/paper.js'))
    script(src=site.getUrl('assets/js/codemirror.js'))
    script(src=site.getUrl('assets/js/scripts.js'))
    title #{root.title} - #{page.title}
  body
    #menu
      h1
        a(href=root.url) #{root.title}
      !{template('menu', root, param)}
    !{template('content', page, param)}